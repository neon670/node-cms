

<div class="row">
    <div class="sm-4">
        <form action="/admin/categories/create">
            <div class="form-group">
                <label for="name">Name</label>
                <input type="text" name="name"value="">
            </div>
            <button class="btn btn-primary">Submit</button>
        </form>
    </div>
    <br>
    <hr>
    <div class="col sm-8">
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>id</th>
                    <th>Name</th>
                </tr>
            </thead>
            <tbody>
                {{#each categories}}
                <tr>
                    <td>{{id}}</td>
                    <td>{{name}}</td>
                </tr>
                {{/each}}
            </tbody>
        </table>
    </div>   
</div>